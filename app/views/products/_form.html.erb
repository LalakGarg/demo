<style>
    span{
        color : red;
    }
</style>

<%= form_with model: @product, url: "/sellers/#{params[:seller_id]}/products" do |f| %>

    <div class = "row" style = "text-align: center;">
        <div class = "col-lg-6">
            <%= f.label :name %><br>
            <%= f.text_field :name %>
            <% @product.errors.full_messages_for(:name).each do |message| %>
                <span><%= message %></span><br>
            <% end %>
        </div>

        <div class = "col-lg-6">
            <%= f.label :description %><br>
            <%= f.text_area :description %>
        </div>

        <div class = "col-lg-6">
            <%= f.label :Category %><br>
            <%= f.collection_select :category_id, Category.order(:name), :id, :name %>
            <% @product.errors.full_messages_for(:category_id).each do |message| %>
                <span><%= message %></span><br>
            <% end %>
        </div>

        <div class = "col-lg-6">
            <%= f.label :price %><br>
            <%= f.text_field :price %>
            <% @product.errors.full_messages_for(:category_id).each do |message| %>
                <span><%= message %></span><br>
            <% end %>
        </div>

        <center><div class = "col-lg-6">
            <%= f.check_box :available %>
            <b><%= f.label :available %></b>
            <% @product.errors.full_messages_for(:category_id).each do |message| %>
                <span><%= message %></span><br>
            <% end %>
        </div></center>

        <div class = "col-lg-12" style = "margin: 10px 0px; text-align: center;">
            <%= f.submit "Submit", :class => "btn btn-info" %>
        </div>
    </div>
<% end %>