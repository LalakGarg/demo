<section id = "home" name = "home"></section>
<div id = "headerwrap">
    <div class = "container">
        <div class = "row text-center">
            <div class = "col-lg-12">
                <% unless user_signed_in? %>
                    <h1>Welcome Guest!!</h1>
                <% else %>
                    <div style = "position: relative; width: 900px; margin: 0px auto;">
                        <h1>Welcome <b><%= current_user.type_id.name %></b>!!</h1>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>

<% unless user_signed_in? %>
    <div id = "headerwrap">
        <div class = "container">
            <h3>Login or Sign Up first to continue.....</h3>
        </div>
    </div>
<% else %>
    <% if current_user.type_id_type == "Customer" %>
        <div id = "headerwrap">
            <div class = "container">
                <div class = "row text-center">
                    <div class = "col-lg-12">
                        <div style = "position: relative; width: 900px; margin: 0px auto;">
                            <h3>Are you hungry?</h3>
                            <form class="d-flex">
                                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-success" type="submit">Search</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%= render template: "customers/index" %>
    <% else %>
        <%= render template: "sellers/index" %>
    <% end %>
<% end %>