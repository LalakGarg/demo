<table class = "table table-borderless">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th colspan = "4"></th>
        </tr>
    </thead>
    <tbody>
        <% @carts.each do |cart| %>
            <tr>
                <td><%= cart.product.name %></td>
                <td><%= cart.product.price %></td>
                <td>
                    <%= form_for cart do |f| %>
                        <%= f.hidden_field :product_id, :value => cart.product.id %>
                        <%= f.number_field :quantity, :value => cart.quantity.to_i %>
                        <%= f.submit "Update Cart", class: "btn btn-info" %>
                        <%= button_to "Remove", cart_path(cart), method: :delete, class: "btn btn-danger" %>
                    <% end %>
                </td>
            </tr>
        <% end %>
        <tr>
            <th colspan="3">Subtotal:</th>
            <% debugger %>
            <td><%= @carts.total %></td>
        </tr>
    </tbody>
    <h3>Your current cart value has a subtotal of: <%= current_payment.subtotal%></h3>
</table>