<style>
    span{
        color : red;
    }
</style>

<%= form_for(@customer) do |f| %>

    <div class = "row" style = "text-align: center;">
        <div class = "col-lg-6">
            <%= f.label :name %><br>
            <%= f.text_field :name %>
            <% @customer.errors.full_messages_for(:name).each do |message| %>
                <span><%= message %></span><br>
            <% end %>
        </div>

        <div class = "col-lg-6">
            <%= f.label :Contact_no %><br>
            <%= f.number_field :contact_no %>
            <% @customer.errors.full_messages_for(:contact_no).each do |message| %>
                <span><%= message %></span>
            <% end %>
        </div>

        <div class = "col-lg-6">
            <%= f.label :Address %><br>
            <%= f.text_area :address %>
            <% @customer.errors.full_messages_for(:address).each do |message| %>
                <span><%= message %></span>
            <% end %>
        </div>

        <%= f.fields_for :user do |u| %>
            <div class = "col-lg-6">
                <%= u.label :email %><br>
                <%= u.text_field :email %>
                <% @customer.user.errors.full_messages_for(:email).each do |message| %>
                    <span><%= message %></span>
                <% end %>
            </div>

            <div class = "col-lg-6">
                <%= u.label :password %><br>
                <%= u.password_field :password %>
                <% @customer.user.errors.full_messages_for(:password).each do |message| %>
                    <span><%= message %></span>
                <% end %>
            </div>

            <div class = "col-lg-6">
                <%= u.label :password_confirmation %><br>
                <%= u.password_field :password_confirmation %>
                <% @customer.user.errors.full_messages_for(:password_confirmation).each do |message| %>
                    <span><%= message %></span>
                <% end %>
            </div>
        <% end %>

        <div class = "col-lg-12" style = "margin: 10px 0px; text-align: center;">
            <%= f.submit "Submit", :class => "btn btn-info" %>
        </div>
    </div>
<% end %>